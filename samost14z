#include <iostream>

using namespace std;
int main()
{
	int n;
	double Res, pow3;
	cout << "Enter n: ";
	cin >> n;
	double x[3];
	for (int i = 0; i < 3; i++)
	{
		cout << "Enter x" << i + 1 << " = ";
		cin >> x[i];
	}
	for (int i = 0; i < 3; i++)
	{
		pow3 = 1;
		if (x[i] < 0)
			Res = log(x[i] * x[i] + 2.7);
		else
			Res = log(x[i] + 2.7);
		for (int j = 0; j < n; j++)
		{
			pow3 = 2 * pow3 / 3 + Res / (3 * pow3 * pow3);
		}
		cout << "Pow (" << Res << ", 1.0/3.0) = " << pow3 << endl;
	}
}

